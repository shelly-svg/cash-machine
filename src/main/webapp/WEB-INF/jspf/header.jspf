<%@ page pageEncoding="UTF-8" %>
<%@ include file="/WEB-INF/jspf/directive/taglib.jspf" %>

<div id="header_container">
    <c:if test="${not empty sessionScope.user}">
        <div id="left_header">
            <nav class="one">
                <ul>
                    <li><a href="?command=viewMenu">Main menu</a></li>
                    <li><a href="?command=viewSettings">Profile</a></li>
                    <c:if test="${sessionScope.userRole.name().toLowerCase() == 'commodity_expert'}">
                        <li><a href="?command=addProduct">Add product</a></li>
                        <li><a href="?command=viewSearchProductPage">Edit product</a></li>
                    </c:if>
                    <c:if test="${sessionScope.userRole.name().toLowerCase() == 'cashier'}">
                        <li><a href="?command=createReceipt">Create receipt</a></li>
                        <c:if test="${not empty sessionScope.currentReceipt}">
                            <li><a href="?command=viewCurrentReceipt">Current receipt</a></li>
                            <c:if test="${sessionScope.currentReceipt.receiptStatus.name().toLowerCase() == 'new_receipt'}">
                                <li><a href="?command=viewSearchProductPage">Add products</a></li>
                                <li><a href="?command=editReceiptProducts">Edit products</a></li>
                            </c:if>
                        </c:if>
                        <li><a href="?command=viewSearchReceiptPage">Choose receipt</a></li>
                    </c:if>
                    <li><a href="?command=logout">Log out</a></li>
                </ul>
            </nav>
        </div>
    </c:if>

    <div id="right_header">

        <form action="controller">
            <input type="hidden" name="command" value="changeLocaleToRu"/>
            <input type="submit" value="RU" name="RU" class="lang_button">
        </form>
        <form action="controller">
            <input type="hidden" name="command" value="changeLocaleToEn"/>
            <input type="submit" value="EN" name="RU" class="lang_button">
        </form>

    </div>

</div>
